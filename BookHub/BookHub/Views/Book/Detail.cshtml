@model BusinessLayer.Models.BookDetail

@{
    ViewData["Title"] = "Detail";
}

<div class="col-12">
    <h2>@Model.Name</h2>
</div>

<div class="col-6">

    <p>Publisher: <a href="@Url.Action("Detail", "Publisher", new { id = Model.Publisher.Id })">@Model.Publisher.Name</a>
    </p>
   <p>Primary Genre: @Model.PrimaryGenre.Name</p> 
    <p>Genres: 
        @if (Model.Genres.Any())
        {
            foreach (var genre in Model.Genres)
            {
                <a href="@Url.Action("Detail", "Genre", new { id = genre.Id })">@genre.Name</a>
                @if (!genre.Equals(Model.Genres.Last())) { <span>,</span> }
            }
        }
    </p>
    <p>Authors:
    @if (Model.Authors.Any())
    {
        foreach (var author in Model.Authors)
        {
            {
                <a href="@Url.Action("Detail", "Author", new { id = author.Id })">@author.Name</a>
                @if (!author.Equals(Model.Authors.Last())) { <span>,</span> }
            }
        }
    }
    </p>
    <p>Stock: @Model.StockInStorage</p>
    <p>Overall Rating: @Model.OverallRating %</p>
    <p>Price: @Model.Price â‚¬</p>
     <h3>
            <button id="showReviewsBtn" class="btn btn-primary">
                Show all reviews
            </button>
        </h3>
    
        <div id="reviewsContainer">
            <!-- Reviews partial view content will be loaded here -->
        </div>
    </div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function () {
            $('#showReviewsBtn').on('click', function () {
                $.ajax({
                    url: '@Url.Action("ShowRatings", "Book", new { id = Model.Id })',
                    type: 'GET',
                    success: function (result) {
                        $('#reviewsContainer').html(result);
                    },
                    error: function (error) {
                        console.error('Error loading reviews: ', error);
                    }
                });
            });
        });
    </script>
}