@model BusinessLayer.Models.GenreDetail

@{
    ViewData["Title"] = "Detail";
}

<div class="col-12">
    <h2>@Model.Name</h2>
</div>

<div class="col-6">
    <h3>Books:</h3>
    @if (Model.Books.Any())
    {
        foreach (var book in Model.Books)
        {
            {
                <div class="border-bottom mb-2">
                    <a href="@Url.Action("Detail", "Book", new {id = book.Id})"><p>@book.Name</p></a>
                </div>
            }
        }
    }
    else
    {
        <p>No books yet.</p>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}